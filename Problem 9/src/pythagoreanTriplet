package pythagoreanTriplet;

public class Main {
	private static boolean isPythogorean(int a, int b, int c) {
		return (a * a) + (b * b) == (c * c);
	}
	public static void main(String[] args) {
		int a = 1, b = 1, c = 1;
		for (a = 1; a < 1000; a++) {
			for (b = (a + 1); b < 1000; b++) {
				c = 1000 - a - b;
				if (c > b && isPythogorean(a, b, c))
					break;
			}
			if (isPythogorean(a, b, c))
				break;
		}
		System.out.println(a * b * c);
	}
}
