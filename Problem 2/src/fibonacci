package fibonacci;

public class Main {
	private static long sumOfFibonacci(long n) {
		if (n < 0) throw new IllegalArgumentException("Argument must be greater than zero");
		long fib0 = 0, fib1 = 1;
		long sum = 0, fibValue = 0;
		
		while (fibValue <= n) {
			fibValue = fib0 + fib1;
			fib0 = fib1;
			fib1 = fibValue;
			
			if (fibValue % 2 == 0)
				sum += fibValue;
		}
		return sum;
	}
	public static void main(String[] args) {
		long result = sumOfFibonacci(4000000);
		System.out.println(result);
	}
}
